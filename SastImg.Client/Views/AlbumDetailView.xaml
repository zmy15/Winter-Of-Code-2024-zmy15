<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SastImg.Client.Views.AlbumDetailView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SastImg.Client.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals" 
    d:DataContext="{d:DesignInstance Type=local:AlbumDetailViewModel}"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <!-- 左侧面板：相册信息及文字说明 -->
        <Border Grid.Column="0" 
                BorderThickness="1" 
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                CornerRadius="12"
                Padding="20"
                Margin="0,0,10,0">
            <StackPanel>
                <!-- 返回按钮 -->
                <Button Width="48" Height="48" HorizontalAlignment="Left" Click="Button_Click">
                    <AnimatedIcon x:Name="BackAnimatedIcon">
                        <AnimatedIcon.Source>
                            <animatedvisuals:AnimatedBackVisualSource/>
                        </AnimatedIcon.Source>
                        <AnimatedIcon.FallbackIconSource>
                            <SymbolIconSource Symbol="Back"/>
                        </AnimatedIcon.FallbackIconSource>
                    </AnimatedIcon>
                </Button>
                <!-- 相册信息 -->
                <TextBlock Text="{Binding Title}" FontSize="36" Margin="0,20,0,0" TextWrapping="Wrap"/>
                <TextBlock Text="{Binding Description}" FontSize="20" Margin="0,10,0,0" TextWrapping="Wrap"/>
                <TextBlock Text="权限等级:" FontWeight="Bold" Margin="0,10,0,0"/>
                <TextBlock Text="{Binding AccessLevel}" FontSize="20" />
                <TextBlock Text="创建时间:" FontWeight="Bold" Margin="0,10,0,0"/>
                <TextBlock Text="{Binding CreatedAt}" FontSize="20" />
                <TextBlock Text="更新时间:" FontWeight="Bold" Margin="0,10,0,0"/>
                <TextBlock Text="{Binding UpdatedAt}" FontSize="20" />
                <StackPanel VerticalAlignment="Top" Orientation="Horizontal" Margin="0,30,0,0" HorizontalAlignment="Center">
                    <Button Width="120" Height="50" FontSize="24" HorizontalAlignment="Left" Command="{Binding ChangeAlbum}"
                        Content="修改信息"/>
                    <Button x:Name="PickAPhotoButton" Content="选择图片" Width="120" Height="50" FontSize="24"
                        Command="{Binding PickPhotoCommand}" Margin="200,0,0,0"/>
                </StackPanel>
                <Image x:Name="UploadImage"
                    Source="{Binding ImageSource}"
                    Stretch="Uniform" 
                    Height="200" 
                    Width="200"/>
                <TextBlock Text="标题:" FontWeight="Bold" Margin="0,0,0,0" FontSize="18"/>
                <TextBox Text="{Binding ImageTitle, Mode=TwoWay}" Height="40" FontSize="20" Margin="0,0,0,0"/>
                <TextBlock Text="标签:" FontWeight="Bold" FontSize="16"/>
                <StackPanel x:Name="OptionsStackPanel">
                    <CheckBox Content="Select all" IsThreeState="True" IsChecked="{Binding IsAllChecked, Mode=TwoWay}" />
                    <ItemsControl ItemsSource="{Binding Options}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding Name}" IsChecked="{Binding IsChecked, Mode=TwoWay}" Margin="24,0,0,0" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
                <Button  Content="上传图片" Width="120" Height="50" FontSize="24" HorizontalAlignment="Center"
                    Command="{Binding UploadImageCommand}"
                    CommandParameter="{Binding AlbumData}"/>
                <TextBlock Text="{Binding Massage}" HorizontalAlignment="Center" Foreground="{Binding Color}"/>
            </StackPanel>
        </Border>

        <!-- 右侧面板：图片列表 -->
        <Border Grid.Column="1" 
                BorderThickness="1" 
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                CornerRadius="12"
                Padding="20">
            <GridView ItemsSource="{Binding Images}" 
                      IsItemClickEnabled="True"
                      ItemClick="GridView_ItemClick">
                <GridView.ItemTemplate>
                    <DataTemplate>
                        <Image Source="{Binding ImageUrl}" 
                               Stretch="Uniform" 
                               Height="350" 
                               Width="350"/>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </Border>
    </Grid>
</Page>
