<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SastImg.Client.Views.AlbumDetailView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SastImg.Client.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals" 
    xmlns:helper="using:SastImg.Client.Helpers" 
    xmlns:converter="using:SastImg.Client.Controls"
    d:DataContext="{d:DesignInstance Type=local:AlbumDetailViewModel}"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <converter:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converter:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <!-- 左侧面板：相册信息及文字说明 -->
        <Border Grid.Column="0" 
                BorderThickness="1" 
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                CornerRadius="12"
                Padding="10"
                Margin="0,0,10,0">
            <StackPanel>
                <StackPanel VerticalAlignment="Top" Orientation="Horizontal" Margin="0,20,0,0">
                <!-- 返回按钮 -->
                <Button Width="40" Height="40" HorizontalAlignment="Left" Click="Button_Click">
                    <AnimatedIcon x:Name="BackAnimatedIcon">
                        <AnimatedIcon.Source>
                            <animatedvisuals:AnimatedBackVisualSource/>
                        </AnimatedIcon.Source>
                        <AnimatedIcon.FallbackIconSource>
                            <SymbolIconSource Symbol="Back"/>
                        </AnimatedIcon.FallbackIconSource>
                    </AnimatedIcon>
                </Button>
                <!-- 删除按钮 -->
                    <Button Width="40" Height="40" HorizontalAlignment="Right" Margin="480,0,0,0"
                        Command="{Binding DeleteAlbum}"
                        CommandParameter="{Binding AlbumData}">
                        <SymbolIcon Symbol="Delete" Width="20" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center"
                                    Foreground="Red"/>
                    </Button>
                </StackPanel>
                <!-- 相册信息 -->
                <!-- Title 部分 -->
                <Grid>
                    <!-- 显示模式 -->
                    <TextBlock Text="{Binding Title}" 
                        FontSize="36" 
                        Margin="0,10,0,0" 
                        TextWrapping="Wrap"
                        Visibility="{Binding IsEditMode, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                    <!-- 编辑模式 -->
                    <TextBox Text="{Binding Title, Mode=TwoWay}" 
                        FontSize="30" 
                         Margin="0,10,0,0" 
                        TextWrapping="Wrap"
                        Height="55"
                        Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </Grid>

                <!-- Description 部分 -->
                <Grid>
                    <!-- 显示模式 -->
                    <TextBlock Text="{Binding Description}" 
                        FontSize="20" 
                        Margin="0,10,0,0" 
                        TextWrapping="Wrap"
                        Visibility="{Binding IsEditMode, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                    <!-- 编辑模式 -->
                    <TextBox Text="{Binding Description, Mode=TwoWay}" 
                        FontSize="18" 
                        Margin="0,10,0,0" 
                        TextWrapping="Wrap"
                        Height="36"
                        Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </Grid>
                <!-- AccessLevel 部分 -->
                <TextBlock Text="权限等级:" FontWeight="Bold" Margin="0,10,0,0"/>
                <Grid>
                    <!-- 显示模式 -->
                    <TextBlock Text="{Binding AccessLevel}" 
                        FontSize="20"
                        Visibility="{Binding IsEditMode, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                    <!-- 编辑模式 -->
                    <ComboBox SelectedValue="{Binding AccessLevel, Mode=TwoWay}"
                        Width="300"
                        PlaceholderText="权限"
                        Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <x:String>仅作者</x:String>
                        <x:String>管理员可读</x:String>
                        <x:String>管理员可写</x:String>
                        <x:String>所有人可读</x:String>
                        <x:String>所有人可写</x:String>
                    </ComboBox>
                </Grid>
                <TextBlock Text="创建时间:" FontWeight="Bold" Margin="0,10,0,0"/>
                <TextBlock Text="{Binding CreatedAt}" FontSize="20" />
                <TextBlock Text="更新时间:" FontWeight="Bold" Margin="0,10,0,0"/>
                <TextBlock Text="{Binding UpdatedAt}" FontSize="20" />
                <StackPanel VerticalAlignment="Top" Orientation="Horizontal" Margin="0,20,0,0" HorizontalAlignment="Center">
                    <Button Width="120" Height="50" FontSize="24" HorizontalAlignment="Left" Command="{Binding ChangeAlbum}"
                        Content="修改信息" Visibility="{Binding IsEditMode, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                    <Button Width="120" Height="50" FontSize="24" HorizontalAlignment="Left" 
                        Command="{Binding ChangeAlbumConfirm}"
                        CommandParameter="{Binding AlbumData}"
                        Content="确定" Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    <Button x:Name="PickAPhotoButton" Content="选择图片" Width="120" Height="50" FontSize="24"
                        Command="{Binding PickPhotoCommand}" Margin="200,0,0,0"/>
                </StackPanel>
                <StackPanel  Margin="0,-20,0,0">
                    <Image x:Name="UploadImage"
                    Source="{Binding ImageSource}"
                    Stretch="Uniform" 
                    Height="200" 
                    Width="200"/>
                    <TextBlock Text="标题:" FontWeight="Bold" Margin="0,-10,0,0" FontSize="18"/>
                    <TextBox Text="{Binding ImageTitle, Mode=TwoWay}" Height="40" FontSize="20" Margin="0,0,0,0"/>
                    <TextBlock Text="标签:" FontWeight="Bold" FontSize="16"/>
                    <StackPanel x:Name="OptionsStackPanel">
                        <CheckBox Content="Select all" IsThreeState="True" IsChecked="{Binding IsAllChecked, Mode=TwoWay}" />
                        <ItemsControl ItemsSource="{Binding Options}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding Name}" IsChecked="{Binding IsChecked, Mode=TwoWay}" Margin="24,0,0,0" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                    <Button  Content="上传图片" Width="120" Height="50" FontSize="24" HorizontalAlignment="Center"
                    Command="{Binding UploadImageCommand}"
                    CommandParameter="{Binding AlbumData}"/>
                    <TextBlock Text="{Binding Massage}" HorizontalAlignment="Center" Foreground="{Binding Color}" FontSize="18"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- 右侧面板：图片列表 -->
        <Border Grid.Column="1" 
        BorderThickness="1" 
        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
        CornerRadius="12"
        Padding="20">

            <GridView x:Name="ImageGridView" ItemsSource="{Binding Images}">
                <GridView.ItemTemplate>
                    <DataTemplate>
                        <Button 
                    Background="Transparent"
                    Padding="0"
                    BorderThickness="0"
                    Command="{Binding ElementName=ImageGridView, Path=DataContext.ImageViewCommand}"
                    CommandParameter="{Binding}">
                            <Image Source="{Binding ImageUrl}" 
                           Stretch="Uniform" 
                           Height="350" 
                           Width="350"/>
                        </Button>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </Border>
    </Grid>
</Page>
