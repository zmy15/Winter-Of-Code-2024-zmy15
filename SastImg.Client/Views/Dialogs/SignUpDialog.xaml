<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="SastImg.Client.Views.Dialogs.SignUpDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SastImg.Client.Views.Dialogs"
    xmlns:app="using:SastImg.Client"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:helper="using:SastImg.Client.Helpers"
    mc:Ignorable="d"
    Style="{ThemeResource DefaultContentDialogStyle}"
    Title="注册"
    CloseButtonText="取消"
    PrimaryButtonText="注册"
    IsPrimaryButtonEnabled="{x:Bind helper:BindHelper.Not(IsSignUp), Mode=OneWay}">

    <StackPanel Spacing="12">
        <TextBox
            IsEnabled="{x:Bind helper:BindHelper.Not(IsSignUp), Mode=OneWay}"
            Text="{x:Bind Username, Mode=TwoWay}"
            PlaceholderText="用户名" />
        <TextBox
            IsEnabled="{x:Bind helper:BindHelper.Not(IsSignUp), Mode=OneWay}"
            Text="{x:Bind Password, Mode=TwoWay}"
            PlaceholderText="密码" />
        <TextBlock
            Style="{ThemeResource CaptionTextBlockStyle}" Foreground="{ThemeResource SystemFillColorCriticalBrush}" Text="注册失败，请重试" Visibility="{x:Bind IsSignUpFailed, Mode=OneWay}" />
        <TextBlock
            Style="{ThemeResource CaptionTextBlockStyle}" Foreground="{ThemeResource SystemFillColorCriticalBrush}" Text="注册失败，用户名已存在" Visibility="{x:Bind UsernameExists, Mode=OneWay}" />
    </StackPanel>
</ContentDialog>
